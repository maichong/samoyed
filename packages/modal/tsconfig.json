{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "target": "ES2017",
    "lib": [
      "ES2017",
      "dom"
    ],
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
